@page
@model ProductManager.Pages.Products.DeleteModel

<form method="post">
    <input asp-for="Product.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Name" class="p-0"></label>
            <input asp-for="Product.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Price" class="p-0"></label>
            <input asp-for="Product.Price" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.Description" class="p-0"></label>
            <input asp-for="Product.Description" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Product.ImageUrl" class="p-0"></label>
            <img src="@Model.Product.ImageUrl" alt="Product Image" class="img-fluid" style="width: 300px; height: auto;" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control" style="width:150px">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Products/Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
